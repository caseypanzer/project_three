<% if flash[:message] %>
  <div class="alert">
    <%= flash[:message] %>
  </div>
<% end %>

<div class="form-group">
  <form action="<%= users_path %>" method="POST"
      autocomplete="false">
    <input type="hidden" name="authenticity_token"
      value="<%= form_authenticity_token %>">

    <input class="form-control" type="username" name="user[username]"
      placeholder="Username"><br/>
    <input class="form-control" type="email" name="user[email]"
      placeholder="Email"><br/>
    <input class="form-control" type="Create a password" name="user[password]"
      placeholder="Password"><br/>
    <input class="btn" type="submit" value="Sign up">
  </form>
</div>
